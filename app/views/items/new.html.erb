<h1>New Item</h1>

<% form_for ([@registry, @item]) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :store %>
      <% stores = Store.find(:all, :order => :name) %>
      <%= f.collection_select :store_id, stores, :id, :name %>
      <%= link_to 'New Store', :controller => "stores", :action => "new" %>
  </p>
  <p>
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </p>
  <p>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%=  link_to 'Back', registry_path(@registry) %>
