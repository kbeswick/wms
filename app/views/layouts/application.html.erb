<html>
  <head>
    <title>WMS: <%= controller.action_name %></title>
    <link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print">
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <!–[if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]–>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="title_header">
      <div class="container">
        <div id="wms_logo" class="span-16"></div>
        <div id="first_menu" class="span-8 last">
          <h3>
            <%= link_to 'Home', root_url %> &nbsp;&nbsp; 
            Something &nbsp;&nbsp;
            <% if current_user %>
              <%= link_to "Edit Profile", edit_user_path(:current) %> &nbsp;&nbsp;
              <%= link_to "Logout", logout_path %>
            <% else %>  
              <%= link_to "Log in", login_path %>  
            <% end %>
           </h3>
         </div>
      </div>
    </div>
    <div id="second_header">
      <div id="second_menu" class="container"></div>
    </div>
    <div id="main" class="container">
      <%= yield %>
    </div>
    <div id="footer_notice" style="display:none;">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>  
    </div>
    <div id="footer_error" style="display:none;">
      <% if flash[:error] %>
        <%= flash[:error] %>
      <% end %>  
    </div>

    <% if flash[:notice] %>
      <script type="text/javascript">
        new Effect.Appear('footer_notice');
        new Effect.Fade('footer_notice', { delay: 4 });
      </script>
    <% end %>
    <% if flash[:error] %>
      <script type="text/javascript">
        new Effect.Appear('footer_error');
        new Effect.Fade('footer_error', { delay: 4 });
      </script>
    <% end %>

      </body>
</html>
